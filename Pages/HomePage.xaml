<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="projet_stage.Pages.HomePage"
    Title="Accueil"
    BackgroundColor="#111">

    <ScrollView>
        <Grid Padding="20" RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,Auto">

            <VerticalStackLayout Grid.Row="1" Grid.ColumnSpan="2" Spacing="25"
                                 VerticalOptions="Center" HorizontalOptions="Center">

                <Image Source="radio_logo.jpg"
                       HeightRequest="250"
                       HorizontalOptions="Center" />

                <Label x:Name="welcomeLabel"
                       FontSize="28"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       Margin="0,10,0,0"
                       Text="Bienvenue" />

                <Label x:Name="instructionLabel"
                       FontSize="18"
                       TextColor="#ccc"
                       HorizontalTextAlignment="Center"
                       Text="Voici votre application de radio." />

                <Button x:Name="languageButton"
                        BackgroundColor="#E60012"
                        TextColor="White"
                        FontSize="16"
                        CornerRadius="10"
                        WidthRequest="200"
                        HorizontalOptions="Center"
                        Margin="0,10"
                        Text="Changer la langue"
                        IsVisible="False" />

                <HorizontalStackLayout Spacing="40"
                                       HorizontalOptions="Center"
                                       Margin="0,10,0,0">

                    <Border WidthRequest="90"
                            HeightRequest="90"
                            StrokeThickness="0"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            StrokeShape="RoundRectangle 45">
                        <ImageButton x:Name="facebookButton"
                                     Source="facebook.png"
                                     Clicked="OpenFacebook"
                                     BackgroundColor="Transparent"
                                     Aspect="AspectFill" />
                    </Border>

                    <Border WidthRequest="70"
                            HeightRequest="70"
                            StrokeThickness="0"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            StrokeShape="RoundRectangle 45">
                        <ImageButton x:Name="instagramButton"
                                     Source="instagram.png"
                                     Clicked="OpenInstagram"
                                     BackgroundColor="Transparent"
                                     Aspect="AspectFill" />
                    </Border>
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
